<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.RowConstraints?>

<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane VBox.vgrow="ALWAYS">
    <rowConstraints>
      <RowConstraints percentHeight="50" />
      <RowConstraints percentHeight="50" />
    </rowConstraints>

    <children>
      <ScrollPane fx:id="personScroll" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" hbarPolicy="NEVER" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-width: 1px;">
        <VBox GridPane.hgrow="ALWAYS" >
          <FlowPane fx:id="personTags"/>
          <Label fx:id="personDisplay" prefWidth="${personScroll.width}" styleClass="result-display" wrapText="true" VBox.vgrow="ALWAYS" maxHeight="-Infinity"/>
        </VBox>
      </ScrollPane>

      <ScrollPane fx:id="meetingScroll" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS" hbarPolicy="NEVER" style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-width: 1px; -fx-padding: 0 5 0 0;">
        <VBox GridPane.hgrow="ALWAYS">
          <FlowPane fx:id="meetingTags" />
          <Label fx:id="meetingDisplay" prefWidth="${meetingScroll.width}" styleClass="result-display" wrapText="true" VBox.vgrow="ALWAYS" />
        </VBox>
      </ScrollPane>
    </children>
  </GridPane>
</VBox>
