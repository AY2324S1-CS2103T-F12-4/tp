<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.RowConstraints?>
<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane VBox.vgrow="ALWAYS">
    <rowConstraints>
      <RowConstraints percentHeight="30" />
      <RowConstraints percentHeight="50" />
    </rowConstraints>

    <children>
      <VBox GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
        <FlowPane fx:id="tags" />
        <Label fx:id="personDisplay" styleClass="result-display" wrapText="true" VBox.vgrow="ALWAYS" />
      </VBox>

      <VBox GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
        <Label fx:id="meetingDisplay" styleClass="result-display" wrapText="true" VBox.vgrow="ALWAYS" />
      </VBox>
    </children>
  </GridPane>
</VBox>
